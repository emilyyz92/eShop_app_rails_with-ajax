<!DOCTYPE html>
<html>
  <head>
    <title>OnlineShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <strong> Welcome <%= current_user.name if current_user %>! </strong>
      <strong> <%= link_to "Our Products", products_path %> </strong>
      <strong> <%= link_to "Register For an Account", new_user_path %> </strong>
      <% if current_user %>
        <strong> <%= link_to "My Account", user_path(current_user) %></strong>
        <strong> <%= link_to "New Order", new_user_order_path(current_user) %></strong>
        <strong> <%= link_to "Log Out", '/logout', method: :delete %></strong>
      <% else %>
        <strong><%= link_to "Log In", login_path %></strong>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
