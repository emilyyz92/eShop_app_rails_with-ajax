<%= flash[:message] if flash[:message] %>
<div class="jumbotron">
  <h1 class="display-4"><%= @user.name %>'s Account</h1>
  <label class="lead">Your Account Information: </label>
  <br>
  <label>Email: </label>
  <%= @user.email %>
  <br>
  <% if @user.phone_number %>
    <label>Phone: </label><br>
    <%= @user.phone_number %>
    <br>
  <% else %>
    <button type="button" class="btn btn-outline-info">Add phone number</button>
    <br>
  <% end %>
  <hr class="my-4">
  <% if @user.admin %>
    <%= link_to "Manage Orders", orders_path %>
    <%= link_to "Manage Products", products_path %>
  <% elsif @user.orders %>
    <label class="lead">Your Orders: </label>
    <ul class="list-group">
      <% @user.orders.each do |order| %>
        <li class="list-group-item">Order <%= link_to order.id, user_order_path(@user, order) %>, <%= created_at order %> </li>
      <% end %>
    </ul>
  <% end %>
  <hr class="my-4">
  <button type="button" class="btn btn-warning">Edit Account</button>
  <button type="button" class="btn btn-danger">Delete Account</button>
</div>


<%= link_to "Edit Account", edit_user_path(@user) %>
<%= form_for @user, method: "delete" do |f| %>
  <%= f.submit "Delete Account" %>
<% end %>
