<%= form_for @order do |f| %>
  <%= f.hidden_field :user_id %>
  Please select products and quantities:
  <%= f.fields "products_ids" do |fields| %>
    <% Products.each do |product| %>
      <%= fields.check_box value: product.id, name: product.name %> - <%= fields.number_field :count %><br>
    <% end %>
  <% end %>
  <%= f.submit "Create Order" %>
<% end %>
