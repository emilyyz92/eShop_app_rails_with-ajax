<%= form_tag user_orders_path(@user), method: "post" do |f| %>
  <%= hidden_field_tag "order[product][user_id]", @order.user_id %>
  <%= hidden_field_tag "order[order_id]", @order.id %>
  Please select products and quantities:
 <% @products.each do |product| %>
    <br>
    <%= label_tag :name, product.name %>
    <input type="checkbox" name="order[product_id][]" value = "<%= product.id %>" <%= product.name %>>
    <%= select_tag "order[count][]", options_for_select((1..product.inventory).to_a.each_with_index.map {|i, index| [i, index]})%>
  <% end %>
  <%= submit_tag "Create Order" %>
<% end %>
