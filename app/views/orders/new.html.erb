<%= form_for @order do |f| %>
  <%= f.hidden_field :user_id %>
  Please select products and quantities:
  <% Products.each do |product| %>
    <%= f.fields "products_ids[]" do |fields| %>
      <%= fields.check_box value: product.id, product.name %> <%= fields.select :count, [1..product.inventory] %><br>
    <% end %>
  <% end %>
  <%= f.submit "Create Order" %>
<% end %>
