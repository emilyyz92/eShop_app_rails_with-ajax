<h1>Order <%= @order.id %></h1>
<ul>
  <% @products.each do |product| %>
    <li><%= link_to product.name, product_path(product) %> * <%= @order.item_product_count(product) %> </li>
  <% end %>
</ul>
<strong>Total Price: $<%= @order.total_price %></strong>

<% if admin_user %>
  <%= form_tag('/orders/fulfilled', method: 'put') do %>
    <input type="hidden" name="order[id]" value="<%= @order.id %>">
    <%= submit_tag "Fulfill Order" %>
  <% end %>
  <%= link_to "Edit Order", edit_user_order_path(@order.user, @order) %>
  <%= form_for @order, method: 'delete' do |f| %>
    <%= f.hidden_field :id %>
    <%= f.submit "Delete Order" %>
  <% end %>
<% end %>
